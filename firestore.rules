rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 1️⃣ Each user may read/write only their own profile
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2️⃣ Helper function to detect admin role
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/user_profiles/$(request.auth.uid)).data.role == 'admin';
    }

    // 3️⃣ Admins may read/write everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}